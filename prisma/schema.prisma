generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  name      String
  email     String       @unique
  password  String
  status    USER_STATUS? @default(ACTIVE)
  createdAt DateTime     @default(now())
  lastSeen  DateTime? 
}

enum USER_STATUS {
  ACTIVE
  BLOCKED
}
